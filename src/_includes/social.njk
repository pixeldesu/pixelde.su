{% macro item(social) %}
  {% if social.link %}
    <a class="card card--flat card--slim card--linked not-prose flex" href="{{ social.link }}" target="_blank">
      {{ social.icon | safe }}
      <div class="ps-2">
        <span class="leading-none block font-semibold">{{ social.name }}</span>
        <span class="leading-none opacity-75 block italic">{{ social.text }}</span>
      </div>
    </a>
  {% else %}
    <div class="card card--flat card--slim not-prose flex">
      {{ social.icon | safe }}
      <div class="ps-2">
        <span class="leading-none block font-semibold">{{ social.name }}</span>
        <span class="leading-none opacity-75 block italic">{{ social.text }}</span>
      </div>
    </div>
  {% endif %}
{% endmacro %}